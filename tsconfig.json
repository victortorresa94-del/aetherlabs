{
  "compilerOptions": {
    /* === Target & environment === */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],

    /* === Module system === */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* === TypeScript strictness === */
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    /* === JSX & React === */
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    /* === Path alias (IMPORTANT) === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  /* === Include all app code === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
